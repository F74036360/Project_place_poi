<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <GridLayout
                    android:id="@+id/scroll_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:rowCount="8"
                    android:columnCount="4">

                        <ImageButton
                            android:layout_margin="5dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:id="@+id/restaurant"
                            android:background="@drawable/restaurant"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:adjustViewBounds="true"/>

                        <TextView
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/text_restaurant"
                            android:layout_row="1"
                            android:layout_gravity="center"
                            android:text="餐廳"
                            android:layout_column="0"
                            />


                        <ImageButton
                            android:layout_margin="5dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            android:background="@drawable/salon"
                            android:id="@+id/salon"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:adjustViewBounds="true"/>


                        <TextView
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/text_salon"
                            android:layout_row="3"
                            android:layout_gravity="center"
                            android:text="沙龍"
                            android:layout_column="0" />


                        <ImageButton
                            android:layout_margin="5dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            android:background="@drawable/cafe"
                            android:id="@+id/cafe"
                            android:layout_row="4"
                            android:layout_column="0"
                            android:adjustViewBounds="true"/>


                        <TextView
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/text_cafe"
                            android:layout_row="5"
                            android:layout_gravity="center"
                            android:text="咖啡廳"
                            android:layout_column="0" />

                        <ImageButton
                            android:layout_margin="5dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            android:id="@+id/travelspot"
                            android:layout_row="0"
                            android:background="@drawable/travel"
                            android:layout_column="1"
                            android:adjustViewBounds="true"/>

                        <TextView
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/text_travel"
                            android:layout_row="1"
                            android:layout_gravity="center"
                            android:text="景點"
                            android:layout_column="1" />

                        <ImageButton
                            android:layout_margin="5dp"
                            android:layout_width="80dp"

                            android:background="@drawable/hospital"
                            android:layout_height="80dp"
                            android:id="@+id/hospital"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:adjustViewBounds="true"/>

                        <TextView
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/text_hospital"
                            android:layout_row="3"
                            android:layout_gravity="center"
                            android:text="醫院"
                            android:layout_column="1" />

                        <ImageButton
                            android:layout_margin="5dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            android:background="@drawable/hotel"
                            android:id="@+id/hotel"
                            android:layout_row="4"
                            android:layout_column="1"
                            android:adjustViewBounds="true"/>


                        <TextView
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:id="@+id/text_hotel"
                            android:layout_row="5"
                            android:layout_gravity="center"
                            android:text="旅館"
                            android:layout_column="1" />

                        <ImageButton
                            android:layout_margin="5dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            android:id="@+id/bank"
                            android:background="@drawable/bank"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:adjustViewBounds="true"/>


                        <TextView
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="50dp"
                            android:id="@+id/text_bank"
                            android:layout_row="1"
                            android:text="銀行"
                            android:layout_column="2"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal" />

                        <ImageButton
                            android:layout_margin="5dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            android:background="@drawable/book"
                            android:id="@+id/bookstore"
                            android:layout_row="2"
                            android:layout_column="2"
                            android:adjustViewBounds="true"/>

                        <TextView
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="50dp"
                            android:id="@+id/text_bookstore"
                            android:layout_row="3"
                            android:text="書局"
                            android:layout_column="2"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal" />

                        <ImageButton
                            android:layout_margin="5dp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"

                            android:background="@drawable/mall"
                            android:id="@+id/department_store"
                            android:layout_row="4"
                            android:layout_column="2"
                            android:adjustViewBounds="true"/>

                        <TextView
                            android:layout_margin="5dp"
                            android:layout_height="wrap_content"
                            android:layout_width="50dp"
                            android:id="@+id/text_shooping_store"
                            android:layout_row="5"
                            android:text="賣場"
                            android:layout_column="2"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal" />









                </GridLayout>



        </HorizontalScrollView>


</ScrollView>